extends ../../layout/default
include ../../mixins/showalert
include ../../mixins/table-tree.pug

block main
    +alertSuccess(5000)
    +alertError(5000)
    h1 Danh mục sản phẩm

    .card.mb-3
        .card-header Danh sách 
            .card-body 
                .row 
                    .col-8
                    .col-4.text-end
                        a(
                            href=`${prefixAdmin}/categories/products/create`
                            class="btn btn-sm btn-outline-success"
                        ) + Thêm danh mục sản phẩm
                        
                table(
                        class="table table-hover table-sm"
                        checkbox-multi
                    )
                        thead 
                            tr
                                th
                                    input(type="checkbox" name="checkAll")
                                th STT
                                th Vị trí
                                th Hình ảnh
                                th Tiêu đề
                                th Trạng thái
                                th Hành động
                        tbody
                            +tableTree(records)

    form(
        action=""
        method="POST"
        id="form-delete"
        data-path=`${prefixAdmin}/categories/products/delete`
    )

    script(src="/admin/js/categoriesScript.js") 