extends ../../layout/default.pug

include ../../mixins/showalert.pug

block main
    h1(class="mb-4") Sửa nhóm quyền hạn
    
    +alertSuccess(5000)
    
    .card.mb-3
        .card-header
            h5.card-title Sửa nhóm quyền hạn

        .card-body
            form(
                action=`${prefixAdmin}/roles/edit/${role._id}?_method=PATCH`
                method="POST"
            )
                div(class="form-group")
                    label(for="title") Tiêu đề
                    input(
                        type="text" 
                        name="title" 
                        id="title" 
                        class="form-control"
                        value=role.title
                    )
                div(class="form-group")
                    label(for="description") Mô tả
                    textarea(
                        name="description" 
                        id="description" 
                        class="form-control"
                        rows="5"
                    ) #{role.description}
                div(
                    class="form-group"
                    style="display: flex; justify-content: flex-end; margin-top: 10px;"
                )
                    button(
                        type="submit" 
                        class="btn btn-primary"
                    ) Lưu