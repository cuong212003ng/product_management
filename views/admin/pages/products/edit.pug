extends ../../layout/default.pug

include ../../mixins/showalert.pug

block main

    h1(class="mb-4") Sửa sản phẩm: #{product.title}
    
    form(
        action=`${prefixAdmin}/products/edit/${product._id}?_method=PATCH`
        method="POST"
        id="form-edit-product"
        data-id=product._id
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tên sản phẩm
            input(
                type="text" 
                name="title" 
                id="title" 
                class="form-control"
                value=product.title
            )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                rows="5"
                name="description" 
                id="desc" 
                class="form-control tinyMCE"
            ) #{product.description}
        div(class="form-group")
            label(for="price") Giá
            input(
                type="number" 
                name="price" 
                id="price" 
                class="form-control"
                value=product.price
                min="0"
                step="0.01"
                required
            )
        div(class="form-group")
            label(for="discount") % Giảm giá
            input(
                type="number" 
                name="discountPercentage" 
                id="discount" 
                class="form-control"
                value=product.discountPercentage
                min="0"
                step="0.01"
            )
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number" 
                name="stock" 
                id="stock" 
                class="form-control"
                value=product.stock
                min="0"
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail" style="margin-top: 15px; margin-right: 1px;") Hình ảnh
            input(
                type="file" 
                name="thumbnail" 
                id="thumbnail" 
                class="form-control-file"
                accept="image/*"
                upload-image-input
            )
            button(
                type="button"
                class="btn btn-danger"
                delete-image="true"
            ) Xóa hình ảnh
            img(
                src=product.thumbnail
                upload-image-preview
                class="img-preview"
            )
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number" 
                name="position" 
                id="position" 
                class="form-control"
                placeholder="Tự động tăng"
                min="1"
                value=product.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=product.status == 'active'
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked=product.status == 'inactive'
            )
            label(for="statusInactive" class="form-check-label") Dừng hoạt động

        div(class="form-group")
            button(
                type="submit" 
                class="btn btn-primary"
            ) Sửa sản phẩm



    script(src="/admin/js/productScripts.js")   