extends ../../layout/default.pug
include ../../mixins/pagination.pug
include ../../mixins/showalert.pug
block main
    +alertSuccess(5000)

    .row 
        .col-12
            .card
                .card-header
                    h5.card-title Sản phẩm bị xóa
                .card-body
                    .table-responsive 
                        table(
                            class="table table-hover table-sm"
                            checkbox-multi
                        )
                            thead 
                                tr
                                    th STT
                                    th Hình ảnh
                                    th Tên sản phẩm
                                    th Giá
                                    th Giảm giá
                                    th Hành động
                                    th Thời gian xóa
                            tbody
                                each item, index in products  
                                    tr
                                        td #{index + 1}
                                        td 
                                            img.img-thumbnail(src=item.thumbnail, alt=item.title width="100px" height="auto")
                                        td #{item.title}
                                        td #{item.price} $
                                        td #{item.discountPercentage} %
                                        td                                
                                            button(
                                            class=`btn btn-warning btn-sm margin-right: 8px`,
                                            style="margin-right: 8px"
                                            ) Sửa        
                                            button(
                                                class=`btn btn-success btn-sm`
                                                data-id=item._id
                                                button-restore
                                            ) Khôi phục
                                        td #{item.deletedAtFormatted}
                .card-footer
                    
                    .col-12.text-end
                        a(
                            href=`${prefixAdmin}/products`
                            class="btn btn-primary"
                        ) Về trang danh sách

                            


    form(
        action=""
        method="POST"
        id="form-restore"
        data-path=`${prefixAdmin}/products/trash/restore`
    )
                            
    script(src="/admin/js/productScripts.js")