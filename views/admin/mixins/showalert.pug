mixin alertSuccess(time)
    -   if (messages && messages.success)
        .message.info
            div(
                class="alert alert-success"
                data-time=time
                show-alert
            ) #{messages.success} <span close-alert>X</span>


mixin alertError(time)
    -   if (messages && messages.error)
        .message.info
            div(
                class="alert alert-danger"
                data-time=time
                show-alert
            ) #{messages.error} <span close-alert>X</span>